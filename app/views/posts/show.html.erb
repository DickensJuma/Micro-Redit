<h1><%= @post.title %></h1>


<p><%= @post.body %></p>
<%= render partial: 'posts/comment/form' %>


<%= link_to "<< Back to posts List", posts_path %>
<%= link_to "delete", post_path(@post),data: {confirm: "Really delete the post?"}, method: :delete %>
<%= link_to "edit", edit_post_path(@post) %>

<h3>Comments</h3>
<%= render partial: 'posts/comment', collection: @post.comments %>
<h3>Comments (<%= @post.comments.size %>)</h3>